#include<stdio.h>
void
main ()
{
  
char ch[1000], i = 0, count = 0;
  
gets (ch);
  
printf ("%s", ch);
  
while (ch[i] != '\0')
    {
      
count++;
      
i++;
    
}
  
printf ("\nno of character in string is %d\n", count);
  
for (int i = count - 1; i > -1; i--)
    {
      
printf ("%c", ch[i]);

} 
}
