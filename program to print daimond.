/*enter number of rows4
   *
  ***
 *****
*******
 *****
  ***
   *
*/
#include<stdio.h>
void
main ()
{
  
int n;
  
printf ("enter number of rows");
  
scanf ("%d", &n);
  
int k = n - 1;
  
for (int i = 1; i <= n; i++)
    {
      
for (int j = 1; j <= n + (i - 1); j++)
	{
	  
if (i + j <= n)
	    {
	      
printf (" ");
	    
 
}
	  else
	    {
	      
printf ("*");
	    
}
	
}
      
printf ("\n");
    
}
  
 
for (int i = k; i >= 1; i--)
    {
      
printf (" ");
      
for (int j = 1; j <= k + (i - 1); j++)
	{
	  
if (i + j <= k)
	    {
	      
printf (" ");
	    
 
}
	  else
	    {
	      
printf ("*");
	    
}
	
}
      
printf ("\n");
    
}

 
}
